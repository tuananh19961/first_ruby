<% provide(:title, 'Trang chu')%>

<%= render "home/banner"%>

<div class="list_user">
    <div class="row">

        <% @users.each do |user| %>
        <div class="col-sm-4">
            <div class="thumbnail">
                <%= image_tag("/avatar.png") %>
                <div class="caption">
                    <h3><%= user.name %></h3>
                    <p><%= user.email %></p>
                    <p>
                        <%= link_to 'Preview', user_path(user), class: 'btn btn-primary' %>
                    </p>
                </div>
            </div>
        </div>
        <% end %>

    </div>
</div>